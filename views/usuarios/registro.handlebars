{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Crie sua conta</h3>
<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="nome">Nome: </label>
                <input 
                type="text"
                name="nome" 
                id="nome" 
                class="form-control"
                placeholder="Digite seu nome"
                required 
                >
            <label for="email">Email: </label>
            <input 
                type="email"
                name="email" 
                id="email" 
                class="form-control"
                placeholder="Digite seu e-mail"
                required>
            <label for="senha">Senha: </label>
            <input 
                type="password"
                name="senha" 
                id="senha" 
                class="form-control"
                placeholder="Digite sua senha"
                required>
            <label for="senha2">Repita sua senha: </label>
            <input 
                type="password"
                name="senha2" 
                id="senha2" 
                class="form-control"
                placeholder="Digite sua senha"
                required
            >
            <button class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>